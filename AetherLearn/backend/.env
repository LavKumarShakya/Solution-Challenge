# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB=aetherlearn

# JWT Authentication
SECRET_KEY=your_super_secret_key_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Google Cloud Platform
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/credentials.json
GCP_PROJECT_ID=your-gcp-project-id
GCP_LOCATION=us-central1
VERTEX_AI_MODEL=gemini-1.5-pro

# Vertex AI Search Configuration
VERTEX_AI_PROJECT_ID=your-gcp-project-id  # Can be same as GCP_PROJECT_ID
VERTEX_AI_LOCATION=us-central1  # Can be same as GCP_LOCATION
VERTEX_AI_DATASTORE_ID=your-datastore-id  # Create this in Vertex AI Search console
VERTEX_AI_MODEL=gemini-1.5-pro  # Consider gemini-1.5-flash for lower cost if appropriate
VERTEX_AI_TOKEN_LIMIT=30000  # Token limit for model input
VERTEX_AI_MAX_OUTPUT_TOKENS=8192  # Max output tokens for response

# Content Discovery and Optimization
MAX_CONTENT_SOURCES=15  # Maximum sources to include in a learning path
MAX_CONTENT_ITEMS=30  # Maximum content items to retrieve per search
MAX_CONTENT_AGE_DAYS=365  # Filter out content older than this
CONTENT_QUALITY_THRESHOLD=0.7  # Minimum quality score (0-1)
ENABLE_CONTENT_CACHING=true  # Cache results for similar queries
CACHE_EXPIRY_HOURS=24  # How long to keep cached results
